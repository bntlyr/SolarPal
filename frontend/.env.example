# Environment Variables for SolarPal Frontend
# Copy this file to .env.local and fill in your values

# Backend API URL - Set to your deployed backend URL for production
NEXT_PUBLIC_API_BASE_URL=https://solarpal.onrender.com

# Map Configuration (Philippines) - Optional overrides
NEXT_PUBLIC_MAP_CENTER_LAT=12.8797
NEXT_PUBLIC_MAP_CENTER_LNG=121.7740
NEXT_PUBLIC_MAP_ZOOM_LEVEL=6

# Map Bounds (Philippines) - Optional overrides
NEXT_PUBLIC_MAP_MAX_LAT=21.5
NEXT_PUBLIC_MAP_MIN_LAT=4.5
NEXT_PUBLIC_MAP_MAX_LNG=127.0
NEXT_PUBLIC_MAP_MIN_LNG=116.0